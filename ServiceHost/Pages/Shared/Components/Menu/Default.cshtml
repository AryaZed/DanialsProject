<div class="navbar-area marketing-color">
    <div class="noke-responsive-nav">
        <div class="container">
            <div class="noke-responsive-menu">
                <div class="logo">
                    <a asp-page="/Account" asp-page-handler="Login"><img src="assets/img/Main-Logo.png" alt="logo"></a>
                </div>
            </div>
        </div>
    </div>
    <div class="noke-nav">
        <div class="container-fluid">
            <nav class="navbar navbar-expand-md navbar-light">
                <a class="navbar-brand" asp-page="/Account" asp-page-handler="Login"><img src="assets/img/Main-Logo.png" alt="logo"></a>
                <div class="collapse navbar-collapse mean-menu">
                    <ul class="navbar-nav">
                        <li class="nav-item megamenu">
                            <a asp-page="/Index" class="nav-link active">صفحه اصلی </a>
                        </li>
                        <li class="nav-item">
                            <a asp-page="/About" class="nav-link">درباره ما </a>
                        </li>
                        <li class="nav-item">
                            <a asp-page="/ProductCategory" class="dropdown-toggle nav-link">محصولات </a>
                            <ul class="dropdown-menu">
                                <li class="nav-item">
                                    <a asp-page="/ProductCategory" class="nav-link">دسته بندی <i class="fas fa-chevron-left"></i></a>
                                    <ul class="dropdown-menu">
                                        @foreach (var category in Model.ProductCategories)
                                        {
                                            <li>
                                                <a asp-page="./ProductCategory" asp-route-id="@category.Slug">@category.Name</a>
                                            </li>
                                        }
                                    </ul>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="dropdown-toggle nav-link">وبلاگ </a>
                            <ul class="dropdown-menu">
                                <li class="nav-item">
                                    <a asp-page="/ArticleCategory" class="nav-link">مقالات <i class="fas fa-chevron-left"></i></a>
                                    <ul class="dropdown-menu">
                                        @foreach (var category in Model.ArticleCategories)
                                        {
                                            <li class="nav-item">
                                                <a asp-page="/ArticleCategory" asp-route-id="@category.Slug" class="nav-link">@category.Name <i class="fas fa-chevron-left"></i></a>
                                            </li>
                                        }
                                    </ul>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a asp-page="/Contact" class="nav-link">تماس با ما </a>
                        </li>
                    </ul>
                    <div class="others-option d-flex align-items-center">
                        <div class="option-item">
                            <div class="search-icon">
                                <span><a href="http://linkedin.com/jahantechno" target="_blank"><i class="fab fa-linkedin"></i></a></span>
                            </div>
                        </div>
                        <div class="option-item">
                            <div class="social-links">
                                <span><a href="http://instagram.com/jahantechno" target="_blank"><i class="fab fa-instagram"></i></a></span>
                                <span><a href="https://mail.google.com/mail/?view=cm&fs=1&tf=1&to=Jahantechno.tehran@gmail.com" target="_blank"><i class="fab fa-google"></i></a></span>
                            </div>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
    </div>
