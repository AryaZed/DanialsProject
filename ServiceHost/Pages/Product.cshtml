@page
@model ServiceHost.Pages.ProductModel
@{
    ViewData["Title"] = Model.Product.Name;
    ViewData["keywords"] = Model.Product.Keywords;
    ViewData["metaDescription"] = Model.Product.MetaDescription;
}



<div class="products-details-area ptb-100">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-5 col-md-12">
                <div class="products-details-image">

                    <img src="~/ProductPictures/@Model.Product.Picture" class="img-fluid"
                         alt="@Model.Product.Picture">
                </div>
                @foreach (var picture in Model.Product.Pictures)
                {
                    <div class="single-image">
                        <img src="~/ProductPictures/@picture.Picture" class="img-fluid"
                             alt="@picture.PictureAlt" title="@picture.PictureTitle">
                    </div>
                }
            </div>
            <div class="col-lg-7 col-md-12">
                <div class="products-details-desc">
                    <h3><a href="#">@Model.Product.Name</a></h3>
                    <div class="products-review">
                        <a href="#" class="rating-count">@Model.Product.Comments.Count</a>
                    </div>
                    @if (Model.Product.HasDiscount)
                    {
                        <div class="price">
                            <span class="old-price">@Model.Product.Price تومان</span>
                            <span class="new-price">@Model.Product.PriceWithDiscount تومان</span>
                        </div>
                    }
                    else
                    {
                        <span class="old-price">@Model.Product.Price تومان</span>
                    }

                    <p class="product-description">@Model.Product.ShortDescription</p>
                    
                </div>
            </div>
            <div class="col-lg-12 col-md-12">
                <div class="products-details-tabs">
                    <div class="single-tabs-box">
                        <h2><span>توضیحات </span></h2>
                        <div class="inner-box">
                            <h3>بررسی اجمالی </h3>
                            <p class="product-description">@Model.Product.Description</p>
                        </div>
                    </div>

                    <div class="single-tabs-box">
                        <h2><span>نظرات </span></h2>
                        <div class="inner-box">
                            <div class="products-review-comments">
                                <div class="user-review">
                                    @foreach (var comment in Model.Product.Comments)
                                    {
                                        <span class="d-block sub-comment">@comment.Name </span>
                                        <p>@comment.Message</p>
                                    }
                                </div>
                            </div>
                            <div class="review-form-wrapper">
                                <h3>افزودن نظر</h3>
                                <p class="comment-notes">آدرس ایمیل شما منتشر نخواهد شد. قسمتهای مورد نیاز علامت گذاری شده اند <span>*</span></p>
                                <form>
                                    <div class="row">
                                       <div class="col-lg-6 col-md-6">
                                            <div class="form-group">
                                                <input type="text" class="form-control" placeholder="نام  *">
                                            </div>
                                        </div>
                                        <div class="col-lg-6 col-md-6">
                                            <div class="form-group">
                                                <input type="email" class="form-control" placeholder="ایمیل *">
                                            </div>
                                        </div>
                                        <div class="col-lg-12 col-md-12">
                                            <div class="form-group">
                                                <textarea placeholder="نظر شما" class="form-control" cols="30" rows="6"></textarea>
                                            </div>
                                        </div>
                                        <div class="col-lg-12 col-md-12">
                                            <p class="comment-form-cookies-consent">
                                                <input type="checkbox" id="test1">
                                                <label for="test1">نام ، ایمیل و وب سایت من را برای دفعه بعدی که نظر می دهم در این مرورگر ذخیره کنید.</label>
                                            </p>
                                        </div>
                                        <div class="col-lg-12 col-md-12">
                                            <button type="submit">ارسال </button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>