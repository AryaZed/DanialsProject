@page

@model ServiceHost.Pages.ArticleCategoryModel
@{
    ViewData["Title"] = "مقالات";
}

<div class="page-title-area bg-image bg2 style-three jarallax">
    <div class="container">
        <div class="page-title-content">
            <h2>@Model.ArticleCategory.Name</h2>
            <ul>
                <li><a asp-page="./Index">صفحه اصلی </a></li>
                <li>@Model.ArticleCategory.Name </li>
            </ul>
        </div>
    </div>
</div>


<div class="blog-area ptb-100">
    <div class="container">
        <div class="row justify-content-center">
            @foreach (var article in Model.ArticleCategory.Articles)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="single-post-item without-box-shadow">
                        <div class="post-image">
                            <a asp-page="./Article" asp-route-id="@article.Slug">
                                <img src="~/ProductPictures/@article.Picture"
                                     class="img-fluid" alt="@article.PictureAlt"
                                     title="@article.Title">
                            </a>
                        </div>
                        <div class="post-content">
                            <ul class="meta">
                                <li><i class="far fa-calendar-alt"></i>@article.PublishDate</li>
                            </ul>
                            <h3><a asp-page="./Article" asp-route-id="@article.Slug">@article.ShortDescription</a></h3>
                            <a asp-page="./Article" asp-route-id="@article.Slug" class="link-btn">ادامه مطالب <i class="fas fa-chevron-left"></i></a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>


